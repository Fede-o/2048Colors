<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@drawable/background_item_selected"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/level_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            app:srcCompat="@color/level_test_color1" />

        <TextView
            android:id="@+id/level_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_image"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/level_name"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/level_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:text="@string/level_description"
            android:textColor="@color/md_theme_dark_onPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>